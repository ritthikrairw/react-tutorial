    "marked": "^15.0.11",
    "nanoid": "^5.1.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^5.0.0",
    "react-helmet-async": "^2.0.5",
    "react-hook-form": "^7.56.1",
    "react-query-auth": "^2.4.3",
    "react-router": "^7.5.2",
    "tailwind-merge": "^3.2.0",
